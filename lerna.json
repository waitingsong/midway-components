{
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "ignore": ["demo", "@mw-components/taskman"],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        ".githooks",
        ".scripts",
        ".vscode",
        "package-lock.json",
        "packages/demo"
      ]
    },
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "nohoist": [
        "cross-env"
      ],
      "npmClientArgs": [
        "--legacy-peer-deps"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": ["main", "release"],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "npmClient": "npm"
}
