{
  "name": "@mwcp/share",
  "author": "waiting",
  "version": "6.4.0",
  "description": "midway.js share",
  "keywords": [
    "midway.js",
    "ESM",
    "ts"
  ],
  "type": "module",
  "bin": {},
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bugs": {
    "url": "https://github.com/waitingsong/midway-components/issues"
  },
  "homepage": "https://github.com/waitingsong/midway-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/waitingsong/midway-components"
  },
  "license": "MIT",
  "dependencies": {
    "@midwayjs/bootstrap": "^3.12.1",
    "@midwayjs/core": "^3.12.1",
    "@midwayjs/decorator": "^3.12.1",
    "@midwayjs/koa": "^3.12.1",
    "@midwayjs/logger": "^2.17.0",
    "@opentelemetry/api": "*",
    "@waiting/shared-core": "^21.3.0",
    "deepmerge": "^4.3.1",
    "tsconfig-paths": "4"
  },
  "devDependencies": {
    "@waiting/shared-types": "^21.3.0"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "files": [
    "README.*.md",
    "Dockerfile",
    "tsconfig.json",
    "tsconfig.base.json",
    "bin/*.js",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run tsc && tsc-alias && npm run rp",
    "clean": "npm run clean:lock & npm run clean:cache & rm -rf dist/*",
    "clean:cache": "rm -rf .eslintcache .tsbuildinfo",
    "clean:lock": "rm package-lock.json -f",
    "cov": "cross-env TS_NODE_PROJECT=test/tsconfig.json c8 mocha --parallel=false",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "purge": "npm run clean && rm node_modules -rf && rm package-lock.json -f",
    "rp": "rollup -c rollup.config.js --context this",
    "prepack": "rm -f dist/tsconfig.tsbuildinfo",
    "pretest": "npm run build",
    "pretest:local": "npm run build",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha",
    "test:local": "cross-env TS_NODE_PROJECT=test/tsconfig.json ../../node_modules/.bin/mocha",
    "tsc": "tsc -b"
  }
}
